<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

	<TextView
		android:id="@+id/usernameDisplayTextView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_margin="8dp"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_toStartOf="@id/accountTypeTextView"
		android:layout_toLeftOf="@id/accountTypeTextView"
		android:textSize="18sp"
		android:textStyle="bold"
		tools:text="Username"/>

	<TextView
		android:id="@+id/emailDisplayTextView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/usernameDisplayTextView"
		android:layout_alignLeft="@id/usernameDisplayTextView"
		android:layout_alignStart="@id/usernameDisplayTextView"
		android:textSize="18sp"
		tools:text="email@example.com"/>

	<TextView
		android:id="@+id/accountTypeTextView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentEnd="true"
		android:layout_alignParentRight="true"
		android:layout_marginRight="8dp"
		android:layout_marginEnd="8dp"
		android:layout_alignTop="@id/usernameDisplayTextView"
		android:textSize="18sp"
		android:textStyle="italic"
		tools:text="Account Type"/>
</RelativeLayout>