<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

	<TextView
		android:id="@+id/serviceNameTextView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentStart="true"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:layout_marginStart="8dp"
		android:layout_marginLeft="8dp"
		android:layout_marginTop="8dp"
		android:layout_marginEnd="8dp"
		android:layout_marginRight="8dp"
		android:layout_toLeftOf="@id/hourlyRateTextView"
		android:layout_toStartOf="@id/hourlyRateTextView"
		android:textSize="18sp"
		android:textStyle="bold"
		tools:text="Service Name"/>

	<TextView
		android:id="@+id/serviceDescriptionTextView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/serviceNameTextView"
		android:layout_marginTop="8dp"
		android:textSize="14sp"
		android:textStyle="italic"
		android:layout_alignLeft="@id/serviceNameTextView"
		android:layout_alignStart="@id/serviceNameTextView"
		tools:text="Service Name is a Service"/>

	<TextView
		android:id="@+id/hourlyRateTextView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignTop="@id/serviceNameTextView"
		android:layout_alignParentEnd="true"
		android:layout_alignParentRight="true"
		android:layout_marginEnd="8dp"
		android:layout_marginRight="8dp"
		android:textSize="18sp"
		tools:text="22.33 $/hour"/>

</RelativeLayout>