<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AvailableTimeSlotsListFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="381dp"
            android:layout_height="580dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ExpandableListView
                android:id="@+id/mondayListView"
                android:layout_width="match_parent"
                android:layout_height="75dp" />

            <ExpandableListView
                android:id="@+id/tuesdayListView"
                android:layout_width="match_parent"
                android:layout_height="75dp" />

            <ExpandableListView
                android:id="@+id/wednesdayListView"
                android:layout_width="match_parent"
                android:layout_height="75dp" />

            <ExpandableListView
                android:id="@+id/thursdayListView"
                android:layout_width="match_parent"
                android:layout_height="75dp" />

            <ExpandableListView
                android:id="@+id/fridayListView"
                android:layout_width="match_parent"
                android:layout_height="75dp" />

            <ExpandableListView
                android:id="@+id/SaturdayListView"
                android:layout_width="match_parent"
                android:layout_height="75dp" />

            <ExpandableListView
                android:id="@+id/sundayListView"
                android:layout_width="match_parent"
                android:layout_height="75dp" />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</ScrollView>